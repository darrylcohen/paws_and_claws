

<div class="maintenance_heading">
  <h1>Editing Shelter</h1>
</div>

<div class="formContainer">
  <form class="" action="/shelter/<%= @shelter.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <div class="formDetails"
      <label for="name">Name</label>
      <input type="text" name="name" value="<%= @shelter.name %>">
    </div>
    <div class="formDetails"
      <label for="address">Address</label>
      <input type="text" name="address" value="<%= @shelter.address %>">
    </div>
    <div class="formDetails"
      <label for="phone">Phone</label>
      <input type="text" name="phone" value="<%= @shelter.phone %>">
    </div>
    <div class="formDetails">
      <button type="submit" >Submit</button>
    </div>
    <a class="go_back" href="<%= request.referer %>">Go back</a>

  </form>
</div>

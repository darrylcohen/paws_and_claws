
<div class="maintenance_heading">
  <h1>Editing Client</h1>
</div>

<div class="formContainer">
  <form class="" action="/client/<%= @client.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <div class="formDetails"
      <label for="name">Name</label>
      <input type="text" name="name" value="<%= @client.name %>">
    </div>
    <div class="formDetails"
      <label for="pic_image">Picture</label>
      <textarea name="pic_image" rows="5" cols="40"><%= @client.pic_image %></textarea>
    </div>
    <div class="formDetails"
      <label for="phone">Phone</label>
      <input type="text" name="phone" value="<%= @client.phone %>">
    </div>
    <div class="formDetails"
      <label for="email"Email</label>
      <input type="text" name="email" value="<%= @client.email %>">
    </div>
    <div class="formDetails">
      <label for="shelter_id">Shelter</label>
      <select class="" name="shelter_id">
        <% @shelters.each do |shelter| %>
          <option value="<%= shelter.id %>"><%= shelter.name %></option>
        <% end %>
      </select>
    </div>
    <div class="formDetails">
      <button type="submit" >Submit</button>
    </div>
    <a class="go_back" href="<%= request.referer %>">Go back</a>

  </form>
</div>
